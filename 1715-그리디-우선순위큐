import java.io.*;
import java.util.*;

public class Main {
    public static void main(String[] args) throws IOException {

        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        int n = Integer.parseInt(br.readLine());
        PriorityQueue<Integer> pq = new PriorityQueue<>();//자동 정렬...poll하면 최솟값 나옴.

        long answer = 0;
        for (int i = 0; i < n; i++) {
            int a =Integer.parseInt(br.readLine());
            pq.add(a);
        }

        while(pq.size()>1){
            int x = pq.poll();
            int y = pq.poll();
            int newList =x+y;
            answer+= newList;
            pq.add(newList);
        }
        System.out.println(answer);
    }
}
